{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "token": { "type": "string", "minLength": 1 },
      "tweet": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "url": { "type": "string", "format": "uri" },
          "text": { "type": "string", "minLength": 1 },
          "likes": { "type": "integer", "minimum": 0 },
          "images": { "type": "array", "items": { "type": "string", "format": "uri" } },
          "timestamp": { "type": "string", "format": "date-time" }
        },
        "required": ["id", "url", "text", "likes", "images", "timestamp"]
      },
      "user_account": {
        "type": "object",
        "properties": {
          "username": { "type": "string", "minLength": 1 },
          "user_id": { "type": "string", "minLength": 1 },
          "is_verified": { "type": "boolean" },
          "follower_count": { "type": "integer", "minimum": 0 },
          "account_age": { "type": "string", "format": "date-time" },
          "engagement_level": { "type": "integer", "minimum": 0 },
          "total_tweets": { "type": "integer", "minimum": 0 }
        },
        "required": [
          "username",
          "user_id",
          "is_verified",
          "follower_count",
          "account_age",
          "engagement_level",
          "total_tweets"
        ]
      },
      "region": {
        "type": "object",
        "properties": {
          "name": { "type": "string" }
        },
        "required": ["name"]
      },
      "hashtags": {
        "type": "array",
        "items": { "type": "string" }
      },
      "edges": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "type": { "type": "string", "minLength": 1 },
            "from": { "type": "string", "minLength": 1 },
            "to": { "type": "string", "minLength": 0 },
            "attributes": {
              "type": "object",
              "additionalProperties": true
            }
          },
          "required": ["type", "from", "to"]
        }
      }
    },
    "required": ["token", "tweet", "user_account", "region", "edges"]
  }
}
